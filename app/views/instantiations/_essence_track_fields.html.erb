<% f.inputs :class => 'inputs essence_tracks' do %>
  <%= link_to_remove_fields "Remove", f %>
  <%= f.input :essence_track_type_name, :as => :pbcore_combobox,
                                   :input_html => { :class => "pbcore-autocomplete", 
                                                    "data-autocomplete-source" => essence_track_types_path },
                                   :label => "Type",
                                   :required => false %>
  <% f.semantic_fields_for :essence_track_identifiers do |identifier| %>
    <%= render 'essence_track_identifier_fields', :f => identifier %>
  <% end %>
  <%= add_another f, :essence_track_identifiers, "Add new identifier" %>
  <%= f.input :standard,   :as => :string, :label => "Standard", :required => false %>
  <%= f.input :encoding,   :as => :string, :required => false %>
  <%= f.input :data_rate,  :as => :string, :required => false %>
  <%= f.input :time_start, :as => :string, :required => false %>
  <%= f.input :duration,   :as => :string, :required => false %>
  <%= f.input :bit_depth,  :as => :string, :required => false %>
  <%= f.input :frame_rate, :as => :string, :required => false %>
  <%= f.input :playback_speed, :required => false, :wrapper_html => { :class => "col-1" } %>
  <%= f.input :playback_speed_units_of_measure, :label => "Units of Measure", :required => false, :wrapper_html => { :class => "col-2" } %>
  <%= f.input :sampling_rate, :as=> :string, :wrapper_html => { :class => "col-1" }, :required => false %>
  <%= f.input :sampling_rate_units_of_measure, :label => "Units of Measure", :required => false, :wrapper_html => { :class => "col-2" } %>
  <%= f.input :frame_size, :as => :string, :required => false %>
  <%= f.input :aspect_ratio, :as => :string, :required => false %>
  <%= f.input :language_tokens, :label => "Languages", 
                                :input_html => { "data-pre" => prepopulate_language_tokens_for(f.object),
                                                 :class => "language-tokens" }, 
                                :required => false %>
  <% f.semantic_fields_for :annotations do |annotation| %>
    <%= render 'annotation_fields', :f => annotation %>
  <% end %>
  <%= add_another f, :annotations, "Add new annotation" %>
<% end %>